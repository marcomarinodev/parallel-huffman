OBJS	= libs/main.o libs/asx1.o libs/asx2.o libs/asx3.o libs/utils.o
SOURCE	= asxs/asx1.cpp asxs/asx2.cpp asxs/asx3.cpp asxs/utils.cpp main.cpp
HEADER	= asxs/asx1.h asxs/asx2.h asxs/utils.h
OUT	= output
CC	 = g++
FLAGS	 = -g -c -Wall -O3
LFLAGS	 = -pthread

all: $(OBJS)
	$(CC) -g $(OBJS) -o $(OUT) $(LFLAGS)

libs/main.o: main.cpp
	$(CC) $(FLAGS) main.cpp -o libs/main.o

libs/asx1.o: asxs/asx1.cpp
	$(CC) $(FLAGS) asxs/asx1.cpp -o libs/asx1.o

libs/asx2.o: asxs/asx2.cpp
	$(CC) $(FLAGS) asxs/asx2.cpp -o libs/asx2.o

libs/asx3.o: asxs/asx3.cpp
	$(CC) $(FLAGS) asxs/asx3.cpp -o libs/asx3.o

libs/utils.o: asxs/utils.cpp
	$(CC) $(FLAGS) asxs/utils.cpp -o libs/utils.o


clean:
	rm -f $(OBJS) $(OUT)

run: $(OUT)
	./$(OUT)